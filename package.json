{
  "name": "lingo-bot",
  "version": "1.0.0",
  "description": "Translator bot for FB Messenger",
  "main": "app.js",
  "scripts": {
    "start": "sudo forever start -v --minUptime=5000 src/app.js",
    "stop": "sudo forever stop src/app.js",
    "restart": "sudo forever restart -v --minUptime=5000 src/app.js",
    "dev": "sudo node src/app.js",
    "lint": "eslint ./src --ext .js",
    "test": "jest --no-cache || true"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bluebird": "^3.4.1",
    "body-parser": "^1.15.2",
    "dotenv": "^4.0.0",
    "express": "^4.14.0",
    "google-translate": "^1.0.6",
    "lodash": "^4.14.1",
    "messenger-bot": "git+https://github.com/adamjace/messenger-bot.git",
    "mixpanel": "^0.4.0",
    "redis": "^2.6.2"
  },
  "devDependencies": {
    "bluebird": "^3.4.1",
    "eslint": "^3.3.1",
    "google-translate": "^1.0.6",
    "jest-cli": "^14.1.0",
    "lodash": "^4.15.0",
    "mixpanel": "^0.4.0",
    "redis": "^2.6.2"
  },
  "jest": {
    "verbose": "true",
    "bail": "true",
    "unmockedModulePathPatterns": [
      "<rootDir>/node_modules/redis/",
      "<rootDir>/node_modules/bluebird/",
      "<rootDir>/node_modules/sshpk",
      "<rootDir>/node_modules/lodash/",
      "<rootDir>/src/db/redis",
      "<rootDir>/src/db/repo",
      "<rootDir>/src/lib/state",
      "<rootDir>/src/lib/lang",
      "<rootDir>/src/handler/message"
    ]
  }
}
